<config-template xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">
    <!-- <?foreach {/endpoint}?> -->
    <!-- <device foreach="{/endpoint}"> -->
    <device>
      <name>{$DEVICE_NAME}</name>
      <config>
        <interface xmlns="urn:ios">
          <GigabitEthernet when ="{ $INTERFACE_TYPE = 'GigabitEthernet' }" tags="merge">
            <name>{$INTERFACE_NUM}</name>
            <service>
              <instance>
                <id>{$INST_ID}</id>
                <ethernet/>
                <encapsulation>
                  <untagged when ="{ $ENCAPSULATION = 'untagged' }"/>
                  <dot1q when ="{ $ENCAPSULATION = 'dot1q' }">
                    <id>{$VLAN}</id>
                  </dot1q>
                </encapsulation>
                <rewrite when ="{ $ENCAPSULATION = 'dot1q' }">
                  <ingress>
                    <tag>
                      <pop>1</pop>
                      <mode>symmetric</mode>
                    </tag>
                  </ingress>
                </rewrite>
                <xconnect>
                  <address>{$NEIGHBOR}</address>
                  <vcid>{$VC_ID}</vcid>
                  <encapsulation>mpls</encapsulation>
                  <mtu>{$MTU}</mtu>
                </xconnect>
              </instance>
            </service>
          </GigabitEthernet>
          <TenGigabitEthernet when ="{ $INTERFACE_TYPE = 'TenGigabitEthernet' }" tags="merge">
            <name>{$INTERFACE_NUM}</name>
            <service>
              <instance>
                <id>{$INST_ID}</id>
                <ethernet/>
                <encapsulation>
                  <untagged when ="{ $ENCAPSULATION = 'untagged' }"/>
                  <dot1q when ="{ $ENCAPSULATION = 'dot1q' }">
                    <id>{$VLAN}</id>
                  </dot1q>
                </encapsulation>
                <rewrite when ="{ $ENCAPSULATION = 'dot1q' }">
                  <ingress>
                    <tag>
                      <pop>1</pop>
                      <mode>symmetric</mode>
                    </tag>
                  </ingress>
                </rewrite>
                <xconnect>
                  <address>{$NEIGHBOR}</address>
                  <vcid>{$VC_ID}</vcid>
                  <encapsulation>mpls</encapsulation>
                  <mtu>{$MTU}</mtu>
                </xconnect>
              </instance>
            </service>
          </TenGigabitEthernet>
        </interface>

        <interface xmlns="http://tail-f.com/ned/cisco-ios-xr" tags="merge">
          <GigabitEthernet-subinterface when ="{ $INTERFACE_TYPE = 'GigabitEthernet' }">
          <GigabitEthernet>
            <id>{$INTERFACE_NUM}.{$INST_ID}</id>
            <mode>l2transport</mode>
            <mtu>{$MTU+22}</mtu>
            <encapsulation>
              <dot1q when="{ $ENCAPSULATION = 'dot1q' }">
                <vlan-id>{$VLAN}</vlan-id>
              </dot1q>
            </encapsulation>
            <rewrite when="{ $ENCAPSULATION = 'dot1q' }">
              <ingress>
                <tag>
                  <pop>1</pop>
                  <mode>symmetric</mode>
                </tag>
              </ingress>
            </rewrite>
          </GigabitEthernet>
          </GigabitEthernet-subinterface>
        </interface>

        <l2vpn xmlns="http://tail-f.com/ned/cisco-ios-xr">
          <xconnect>
            <group>
              <name>NSO-Group</name>
              <p2p>
                <name>NSO-Group_{$VLAN}</name>
                <interface>
                  <name>{$INTERFACE_TYPE}{$INTERFACE_NUM}.{$INST_ID}</name>
                </interface>
                <neighbor>
                  <address>{$NEIGHBOR}</address>
                  <pw-id>{$VC_ID}</pw-id>
                </neighbor>
              </p2p>
            </group>
          </xconnect>
        </l2vpn>
      </config>
    </device>
    <!-- <?end?> -->
  </devices>
</config-template>
